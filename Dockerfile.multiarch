FROM busybox:1.33.1 AS busybox

FROM golang:1.16-alpine AS builder
ARG TARGETOS
ARG TARGETARCH
ARG TARGETVARIANT
ARG BIN=velero-plugin-for-csi

ENV GOARCH=$TARGETARCH
ENV GOOS=$TARGETOS

# install prerequisites
RUN apk update && apk add gcc && apk add libc-dev 

WORKDIR /app 

COPY go.mod go.sum ./
COPY hack/build.sh /app
RUN go mod download
COPY *.go ./
COPY internal ./internal
RUN go build \
    -o _output/bin/$GOOS/$GOARCH/$BIN \
    -installsuffix "static" \
    -mod=readonly \
    ./

FROM gcr.io/distroless/base-debian10:nonroot
ARG TARGETOS
ARG TARGETARCH
ARG TARGETVARIANT
ARG BIN=velero-plugin-for-csi

COPY --from=builder /app/_output/bin/$TARGETOS/$TARGETARCH/$BIN /plugins/
COPY --from=busybox /bin/cp /bin/cp
USER nonroot:nonroot
ENTRYPOINT ["cp", "/plugins/$BIN", "/target/."]
